<p id="notice"><%= notice %></p>

<h1>Listing Album Attachments</h1>

<table>
  <thead>
    <tr>
      <th>Album</th>
      <th>Avatar</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @album_attachments.each do |album_attachment| %>
      <tr>
        <td><%= album_attachment.album_id %></td>
        <td><%= image_tag album_attachment.try(:avatar) %></td>
        <td><%= link_to 'Show', album_attachment %></td>
        <td><%= link_to 'Edit', edit_album_attachment_path(album_attachment) %></td>
        <td><%= link_to 'Destroy', album_attachment, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

